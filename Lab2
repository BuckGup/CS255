include <stdio.h>
int main()
{
int i;
double d;
char c[10];
c[0] = 'c'; c[1] = 'o'; c[2] = 'r';
c[3] = 'g'; c[4] = 'i'; c[5] = 0;
printf("%s\n", c);
printf("%d %d %d %d %d %d\n", 'a', c[0], c[1], c[2], c[3], c[4]);
d = 0.0;
for(i = 0; i < 5; i++)
{
d = d + (double)(c[i]-'a');
printf("d: %f\n", d);
}
return 0;
}
